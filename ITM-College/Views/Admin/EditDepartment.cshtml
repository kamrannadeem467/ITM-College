@model ITM_College.Areas.Identity.Data.Department

@{
    ViewData["Title"] = "EditDepartment";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>EditDepartment</h1>

<h4>Department</h4>
<hr />
<div class="row">
    <div class="col-12">
        <form asp-action="EditDepartment">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
