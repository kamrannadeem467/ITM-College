@model IEnumerable<ITM_College.Areas.Identity.Data.Facility>

@{
    ViewData["Title"] = "Facility";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Facility</h1>

<p>
    <a asp-action="AddFacility">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <a asp-action="EditFacility" asp-route-id="@item.FacilityId">Edit</a> |
                <a asp-action="DetailsFacility" asp-route-id="@item.FacilityId">Details</a> |
                    <a asp-action="DeleteFacility" asp-route-id="@item.FacilityId" onclick="return confirm('Are you sure you want to delete this course?')">
                        Delete
                    </a>
            </td>
        </tr>
}
    </tbody>
</table>
