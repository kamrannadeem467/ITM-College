					</div>
				</div>
				<div class="col-md-8 col-md-8">
					<div class="shop-list-desc">
						<h4><a href="course-single.html">@facility.Title</a></h4>
						<hr class="invis clearfix">
						<p>@facility.Description</p>
						<a asp-controller="Home" asp-action="FacilityDetail" asp-route-id="@facility.FacilityId" class="btn btn-default btn-sm">Learn More</a>
					</div>
				</div>
			</div>
		}
	</div>
</section>
