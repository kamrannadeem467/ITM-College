@model IEnumerable<ITM_College.Areas.Identity.Data.Facility>
<section class="grey page-title">
	<div class="container">
		<div class="row">
			<div class="col-md-6 text-left">
				<h1>Course List Page</h1>
			</div>
			<div class="col-md-6 text-right">
