        <div class="portfolio course-list d-flex">
            <div class="row">
                @foreach(var courses in Model)
                {
                    <div class="col-6 col-md-6 col-lg-3">
                        <div class="shop-item-list entry">
                            <div class="">
                                <img src="~/frontend/upload/xcourse_01.png.pagespeed.ic.XTOvCuUmZu.png" alt="">
                                <div class="magnifier">
                                </div>
                            </div>
                            <div class="shop-item-title clearfix">
                                <h4><a asp-controller="Home" asp-action="CourseDetail" asp-route-id="@courses.CourseID">@courses.CourseName</a></h4>
                            </div>
                            <div class="shop-item-title clearfix">
                                <div>
                                    @(courses.Description?.Length > 100 ? courses.Description.Substring(0, 100) + "..." : courses.Description)
                                </div>
                            </div>
                        </div>
                    </div>
                    
                }
            </div>
        </div>
    </div>
</section>

